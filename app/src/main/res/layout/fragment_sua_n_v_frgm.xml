<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/primary_key"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/btnBackSuaNV"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/leftarrow" />

            <TextView
                android:id="@+id/txtSuaNVTittle"
                style="@style/edt_Label"
                android:layout_width="match_parent"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/opensan"
                android:textStyle="bold"
                android:text="Sửa nhân viên"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text"
                android:textSize="22dp"

                />

        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/edt_Label"
                    android:layout_marginLeft="10dp"
                    android:text="Họ và tên"
                    android:textColor="@color/text" />

                <EditText
                    android:id="@+id/edtSuaTenNV"
                    style="@style/edt_TextBox2"
                    android:layout_marginTop="5dp"
                    android:hint="Họ và tên"
                    android:textColorHint="@color/black" />

                <LinearLayout
                    android:id="@+id/viewSuaMK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/edt_Label"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Mật khẩu"
                        android:textColor="@color/text" />

                    <EditText
                        android:id="@+id/edtSuaMatKhau"
                        style="@style/edt_TextBox2"
                        android:layout_marginTop="5dp"
                        android:hint="Mật khẩu"
                        android:textColorHint="@color/black" />

                </LinearLayout>

                <TextView
                    style="@style/edt_Label"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Số điện thoại"
                    android:textColor="@color/text" />

                <EditText
                    android:id="@+id/edtSuaSDT"
                    style="@style/edt_TextBox2"
                    android:layout_marginTop="5dp"
                    android:hint="Số điện thoại"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="@color/black" />

                <TextView
                    style="@style/edt_Label"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Năm sinh"
                    android:textColor="@color/text" />

                <EditText
                    android:id="@+id/edtSuaNamSinh"
                    style="@style/edt_TextBox2"
                    android:layout_marginTop="5dp"
                    android:hint="Năm sinh"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColorHint="@color/black" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHuySuaNV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/button"
                android:text="Hủy"
                android:textColor="@color/text"
                android:textSize="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddSuaNV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Xác Nhận"
                android:textColor="@color/text"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>