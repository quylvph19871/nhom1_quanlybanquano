<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <ImageView
                    android:id="@+id/img_SP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/polo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCTSPSuaTenSp"
                    style="@style/edt_Label"
                    android:text="Something Tên SP"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtCTSPSuaGiaSP"
                    style="@style/edt_Label"
                    android:text="29.000đ"
                    android:textColor="@color/red"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCTSPSuaLoaiSP"
                    style="@style/edt_Label"
                    android:text="Loại Sản phẩm: Áo"
                    android:textColor="@color/text"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtCTSPSoLuongSP"
                    style="@style/edt_Label"
                    android:text="Số lượng Sản phẩm: 20"
                    android:textColor="@color/text"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    style="@style/edt_Label"
                    android:text="Mô tả"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCTSPSuaMoTaSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="màu xanh chất liệu cotton"
                    android:textColor="@color/black"
                    android:textSize="18dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCTSPSuaSua"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bo_tron_edt"
                    android:backgroundTint="@color/button"
                    android:text="Sửa"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginRight="15dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCTSPSuaXoa"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bo_tron_edt"
                    android:backgroundTint="@color/button"
                    android:text="Xóa"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"

                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>