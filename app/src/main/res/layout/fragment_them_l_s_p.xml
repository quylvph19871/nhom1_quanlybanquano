<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/primary_key"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <ImageView
            android:id="@+id/btnBackLSP"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/leftarrow"
            />

        <TextView
            style="@style/edt_Label"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/opensan"
            android:textStyle="bold"
            android:text="Thêm loại"
            android:layout_marginLeft="15dp"
            android:textColor="@color/text"
            android:textSize="22dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                style="@style/edt_Label"
                android:text="Tên Loại"
                android:textColor="@color/text"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/edtAddSPLoai"
                style="@style/edt_TextBox2"
                android:layout_marginTop="5dp"
                android:hint="Tên Loại"
                android:textColorHint="@color/black" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        >

        <EditText
            android:id="@+id/btnLSPHuy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Hủy"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:editable="false"
            android:focusable="false"
            android:layout_marginRight="15dp"
            />

        <EditText
            android:id="@+id/btnLSPXN"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Xác Nhận"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:editable="false"
            android:focusable="false"
            />
    </LinearLayout>



</LinearLayout>