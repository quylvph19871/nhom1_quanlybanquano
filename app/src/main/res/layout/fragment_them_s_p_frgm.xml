<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/primary_key"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >

            <ImageView
                android:id="@+id/btnBackThemSP"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/leftarrow"
                />

            <TextView
                style="@style/edt_Label"
                android:layout_width="match_parent"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/opensan"
                android:textStyle="bold"
                android:text="Thêm sản phẩm"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text"
                android:textSize="22dp"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                style="@style/edt_Label"
                android:text="Tên Sản Phẩm"
                android:textColor="@color/text"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/edNameSP"
                style="@style/edt_TextBox2"
                android:hint="Nhập tên Sản Phẩm"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                style="@style/edt_Label"
                android:text="Giá Bán"
                android:textColor="@color/text"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/edPrice"
                style="@style/edt_TextBox2"
                android:hint="Nhập giá bán"
                android:maxLength="7"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                style="@style/edt_Label"
                android:text="Loại sản phẩm"
                android:textColor="@color/text"
                android:layout_marginLeft="10dp"
                />

            <AutoCompleteTextView
                android:id="@+id/edtLoaiSP"
                style="@style/edt_TextBox2"
                android:hint="Nhập loại Sản Phẩm"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                style="@style/edt_Label"
                android:text="Số lượng sản phẩm"
                android:textColor="@color/text"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/edSoLuongSP"
                style="@style/edt_TextBox2"
                android:hint="Nhập số lượng sản phẩm"
                android:maxLength="7"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                style="@style/edt_Label"
                android:text="Mô Tả"
                android:textColor="@color/text"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/edMoTa"
                style="@style/edt_TextBox2"
                android:hint="Nhập mô tả sản phẩm"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/black"
                android:lines="2"
                android:maxLines="2"
                android:minLines="2"
                android:gravity="top"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                style="@style/edt_Label"
                android:text="Ảnh sản phẩm"
                android:textColor="@color/text"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/edImageSP"
                style="@style/edt_TextBox2"
                android:hint="Nhập link ảnh sản phẩm"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/black"
                android:lines="2"
                android:maxLines="2"
                android:minLines="2"
                android:gravity="top"
                />

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            >
            <!--//cuong them id-->
            <EditText
                android:id="@+id/btnHuySp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Hủy"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/text"
                android:fontFamily="@font/ct_font_medium"
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:editable="false"
                android:focusable="false"
                android:layout_marginRight="15dp"
                />

            <EditText
                android:id="@+id/btnAcceptSP"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Xác Nhận"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/text"
                android:fontFamily="@font/ct_font_medium"
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:editable="false"
                android:focusable="false"
                />
        </LinearLayout>

    </LinearLayout>



</ScrollView>