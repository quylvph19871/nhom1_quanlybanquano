<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/primary_key"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/btnBackDoiMK"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/leftarrow" />

        <TextView
            style="@style/edt_Label"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/opensan"
            android:textStyle="bold"
            android:text="Đổi mật khẩu"
           android:layout_marginLeft="15dp"
            android:textColor="@color/text"
            android:textSize="22dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/edt_Label"
                android:layout_marginLeft="10dp"
                android:text="Mật Khẩu Cũ"
                android:textColor="@color/text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ct_edittext_2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edOldPass"
                    style="@style/edt_TextBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập mật khẩu"
                    android:paddingLeft="30dp"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/img_hidePassword1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/ic_visibility_off" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/edt_Label"
                android:layout_marginLeft="10dp"
                android:text="Mật Khẩu Mới"
                android:textColor="@color/text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ct_edittext_2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edNewPass"
                    style="@style/edt_TextBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập mật khẩu"
                    android:paddingLeft="30dp"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/img_hidePassword2"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_visibility_off" />
            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/edt_Label"
                android:layout_marginLeft="10dp"
                android:text="Xác Nhận Mật Khẩu"
                android:textColor="@color/text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ct_edittext_2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edConfirmPass"
                    style="@style/edt_TextBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập mật khẩu"
                    android:paddingLeft="30dp"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/img_hidePassword3"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_visibility_off" />
            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/button"
                android:text="Hủy"
                android:textColor="@color/text"
                android:textSize="20dp"
               />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChange"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="Xác Nhận"
                android:textColor="@color/text"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>