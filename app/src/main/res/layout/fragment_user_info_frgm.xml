<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/primary_key"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/btnBackUserInfo"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/leftarrow"/>

        <TextView
            style="@style/edt_Label"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/opensan"
            android:textStyle="bold"
            android:text="Thông tin cá nhân"
            android:layout_marginLeft="15dp"
            android:textColor="@color/text"
            android:textSize="22dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/user"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textColor="@color/text"
                android:fontFamily="@font/ct_font_medium"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/info" />

                <TextView
                    android:id="@+id/txtInfoFullName"
                    style="@style/edt_Label"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="3dp"
                    android:text="AdminName"
                    android:textColor="@color/text" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                android:textColor="@color/text"
                android:fontFamily="@font/ct_font_medium"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/name" />

                <TextView
                    android:id="@+id/txtInfoUserName"
                    style="@style/edt_Label"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="3dp"
                    android:text="Admin"
                    android:textColor="@color/text" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chức vụ"
                android:textColor="@color/text"
                android:fontFamily="@font/ct_font_medium"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ad"
                  />

                <TextView
                    android:id="@+id/txtInfoChucVu"
                    style="@style/edt_Label"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="3dp"
                    android:text="AdminName"
                    android:textColor="@color/text" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textColor="@color/text"
                android:fontFamily="@font/ct_font_medium"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/phone" />

                <TextView
                    android:id="@+id/txtInfoSDT"
                    style="@style/edt_Label"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="3dp"
                    android:text="0123456789"
                    android:textColor="@color/text" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Năm sinh"
                android:textColor="@color/text"
                android:fontFamily="@font/ct_font_medium"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/year"

                     />

                <TextView
                    android:id="@+id/txtInfoNamSinh"
                    style="@style/edt_Label"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="3dp"
                    android:text="2000"
                    android:textColor="@color/text" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/btnInfoEdit"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Chỉnh Sửa Thông Tin"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/text"
            android:fontFamily="@font/ct_font_medium"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:editable="false"
            android:focusable="false"
            />

    </LinearLayout>


</LinearLayout>